# Database (shared PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dearborn

# Redis for event bus
REDIS_URL=redis://localhost:6379

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://dearborn-ai-cmo-production.up.railway.app

# This module's public URL (for OAuth callbacks)
CDO_API_URL=https://dearborn-ai-cdo-production.up.railway.app

# Other module URLs (Railway internal networking)
CEO_API_URL=http://ceo-api.railway.internal:8080
CFO_API_URL=http://quickbooks-sync.railway.internal:8080
CMO_API_URL=http://dearborn-ai-cmo.railway.internal:3000
COO_API_URL=http://dearborn-ai-coo.railway.internal:8080

# Shopify OAuth
SHOPIFY_STORE=yourstore.myshopify.com
SHOPIFY_CLIENT_ID=your_client_id
SHOPIFY_CLIENT_SECRET=your_client_secret

# OpenAI for AI features
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o
DALL_E_MODEL=dall-e-3

# Microsoft OneDrive for file storage (patterns, sketches, tech packs)
ONEDRIVE_CLIENT_ID=your_client_id
ONEDRIVE_CLIENT_SECRET=your_client_secret
ONEDRIVE_TENANT_ID=your_tenant_id
ONEDRIVE_USER_ID=user@yourdomain.com
ONEDRIVE_FOLDER_PATH=Dearborn AI/CDO

# Scheduler (cron expression for weekly discovery scan)
DISCOVERY_CRON=0 6 * * 1

# App settings
DEBUG=false
LOG_LEVEL=INFO
